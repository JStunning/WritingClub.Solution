@using WritingClub.Models; 
@model List<WritingClub.Models.Prompt>;

<h1>All Prompts:</h1>

@if (Model.Count == 0)
{
  <h1>Sorry there are no prompts currently</h1>
}

<ol>

@foreach (Prompt prompt in Model)
{
    <ul>
        <li>ID: @prompt.PromptId</li>
        <li>Name: @prompt.PromptName</li>
        <li>Author: @prompt.AuthorName</li>
    </ul>
    <a href="/Prompts/Details/@(prompt.PromptId)"><p>View Details</p></a>
    <br>
}
</ol>